{
  "name": "drakonwidget-for-vscode",
  "displayName": "Drakonwidget for vscode",
  "description": "Расширение для работы с диаграммами Drakon в VS Code",
  "version": "0.0.1",
  "publisher": "Vitaly Adadurov",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "Drakon.Start",
        "title": "Новая схема",
        "category": "ДРАКОН"
      },
      {
        "command": "Drakon.OpenFile",
        "title": "Открыть файл",
        "category": "ДРАКОН"
      }
    ]
  },

  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --yarn"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.27",
    "@types/vscode": "^1.98.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "typescript": "^5.8.2"
  }
}